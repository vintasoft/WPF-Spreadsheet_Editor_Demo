<local:SpreadsheetVisualEditorPanel x:Class="WpfSpreadsheetEditorDemo.FunctionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSpreadsheetEditorDemo"
             xmlns:vsue="clr-namespace:Vintasoft.Imaging.Wpf.UI.UIElements;assembly=Vintasoft.Imaging.Wpf.UI"
             mc:Ignorable="d" 
             Height="Auto" d:DesignWidth="300">
    <UserControl.Resources>
        <BitmapImage x:Key="insertFunctionButtonIcon" UriSource="../Resources/InsertFunction.png" />
        <BitmapImage x:Key="showFomulasButtonIcon" UriSource="../Resources/ShowFormulas.png" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <vsue:PanelButtonWithText Width="94" x:Name="insertFunctionButton" ToolTip="Insert Function" Text="Insert Function" ImageSource="{StaticResource insertFunctionButtonIcon}" Click="insertFunctionButton_Click"/>
        <vsue:PanelButtonWithText Width="94" x:Name="showFomulasButton" ToolTip="Show Formulas" Text="Show Formulas" ImageSource="{StaticResource showFomulasButtonIcon}" Click="showFomulasButton_Click"/>
    </StackPanel>
</local:SpreadsheetVisualEditorPanel>
